---
interface Props {
	href: string;
	title: string;
}
const { href, title } = Astro.props;
---
<div class="m-video">
    <div class="m-video__wrapper-video">
        <iframe
            class="m-video__video"
            src={href} 
            frameborder="0"
            allow="autoplay; fullscreen;"
            title={title}>
        </iframe>
    </div>
</div>

<style lang="scss">
@use "../../scss/main.scss" as *;
.m-video{
    margin: 0px 5px 0px 5px;
    &__wrapper-video{
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        max-width: 100%;
    }
}
    iframe, object, embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>
